<h2>Register your radio</h2>

<% if pin_error %>
<div class="flash">
  <h3>Something's wrong with the PIN you entered</h3>
  <p>Please press Cancel on your radio and start the registration process from the beginning</p>
</div>
<% end %>

<div id="register_container">

  <ul id="register_steps">
    <li class="active_step" id="step1">
      <%= erb :step1 %>
    </li>

    <li class="greyed_step" id="step2">
      <%= erb :step2 %>
    </li>

    <li class="greyed_step" id="step3">
      <%= erb :step3 %>
    </li>

    <li class="greyed_step" id="done">
      <%= erb :step4 %>
    </li>
  </ul>
</div>



